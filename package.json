{
  "name": "claritydq",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "src/frontend"
  ],
  "scripts": {
    "frontend:dev": "npm run dev --workspace=src/frontend",
    "frontend:build": "npm run build --workspace=src/frontend",
    "frontend:test": "npm run test --workspace=src/frontend",
    "frontend:test:coverage": "npm run test:coverage --workspace=src/frontend",
    "backend:build": "dotnet build src/backend/ClarityDQ.sln",
    "backend:test": "dotnet test src/backend/ClarityDQ.sln",
    "backend:test:coverage": "dotnet test src/backend/ClarityDQ.sln /p:CollectCoverage=true /p:CoverletOutputFormat=opencover",
    "backend:run": "dotnet run --project src/backend/ClarityDQ.Api",
    "test": "npm run test --workspaces && dotnet test src/backend/ClarityDQ.sln",
    "test:coverage": "npm run frontend:test:coverage && npm run backend:test:coverage",
    "test:e2e": "playwright test",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/[org]/ClarityDQ.git"
  },
  "keywords": [
    "microsoft-fabric",
    "data-quality",
    "data-governance",
    "lineage",
    "data-profiling"
  ],
  "author": "ClarityDQ Team",
  "license": "TBD",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
